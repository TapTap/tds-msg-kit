{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "module": "ESNext",
    "noImplicitAny": false,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "outDir": "es",
    "declaration": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.js", "./src/**/*.ts", "./types"]
}
